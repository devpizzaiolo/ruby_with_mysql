<div class="row">
<div class="col-md-6">
  <%= form_with model: @user, url: sign_up_path do |form| %>
  <h1> Sign Up</h1>
    <div class="col-12 mb-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", placeholder:"John Doe" %>
    </div>
    <div class="col-12 mb-3">
      <%= form.label :password %>
      <%= form.password_field :password , class: "form-control", placeholder:"Password" %>
    </div>
    <div class="mb-3">
      <%= form.submit :Signup,class: "btn btn-primary" %>
    </div> 
  <% end %>
  </div>
  <div class="col-md-6">
  <%= form_with model: @user, url: logined_path do |form| %>
  <h1> Login</h1>
  
    <div class="col-12  mb-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", placeholder:"John Doe" %>
    </div>
    <div class="col-12  mb-3">
      <%= form.label :password %>
      <%= form.password_field :password , class: "form-control", placeholder:"Password" %>
    </div>
    <div class="mb-3">
      <%= form.submit :Login ,class: "btn btn-primary" %>
    </div> 
  <% end %>
  </div>
</div>